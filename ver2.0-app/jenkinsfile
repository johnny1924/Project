pipeline {
    agent any
    environment {
        REPO_URL='https://github.com/johnny1924/Project.git'
        BACKEND_IMAGE_NAME='project-backend-k8s'
        BACKEND_IMAGE_TAG="latest"
        REGISTRY='DockerHub'
        ACCOUNT_NAME='JSJProject'
        NEW_FRONTEND_NAME=''
        NEW_BACKEND_NAME=''
        DOCKERHUB_CREDENTIALS = credentials('DockerCred')
    }
    stages {
        stage('clone') {
            steps {
                sh 'git checkout main || git checkout -b main'
                sh 'git pull origin main'
                sh 'pwd'
            }
        }
        stage('build backend') {
            steps {
                sh 'docker ps'
                sh 'docker build -t ${ACCOUNT_NAME}/${CONTAINER_NAME_BACKEND}:${BACKEND_IMAGE_TAG} .'
            }
        }
        stage('Login to DockerHub') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'DockerCred', usernameVariable: 'dsoproject14@gmail.com', passwordVariable: 'Yh@#2323!')]) {
                    sh 'echo $DOCKERHUB_PASSWORD | docker login --username $DOCKERHUB_USERNAME --password-stdin'
                }
            }
        }
        stage('push backend') {
            steps {
                sh 'docker images'
                sh 'docker push ${ACCOUNT_NAME}/${CONTAINER_NAME_BACKEND}:${BACKEND_IMAGE_TAG}'
            }
        }
    }
    post {
        always {
            echo '========always========'
        }
        success {
            echo '========pipeline executed successfully ========'
        }
        failure {
            echo '========pipeline execution failed========'
        }
    }
}
