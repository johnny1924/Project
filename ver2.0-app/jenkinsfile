pipeline {
    agent any
    environment {
        REPO_URL='https://github.com/johnny1924/Project.git'
        BACKEND_IMAGE_NAME='projectvt2'
        BACKEND_IMAGE_TAG="latest"
        REGISTRY='DockerHub'
        ACCOUNT_NAME='JSJProject'
    }
    stages {
        stage('Clean Workspace') {
            steps {
                // Clean the workspace
                deleteDir()
            }
        }
        stage('Clone Repository') {
            steps {
                // Clone the repository
                sh 'git clone $REPO_URL .'
                sh 'git checkout main || git checkout -b main'
                sh 'git pull origin main'
                sh 'pwd'
            }
        }
        stage('Build Backend') {
            steps {
                sh 'docker ps'
                sh 'docker build -t jsjproject/projectvt2:latest .'
            }
        }
        stage('Login to DockerHub') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'DockerCred', usernameVariable: 'DOCKERHUB_USERNAME', passwordVariable: 'DOCKERHUB_PASSWORD')]) {
                    sh 'echo $DOCKERHUB_PASSWORD | docker login --username $DOCKERHUB_USERNAME --password-stdin'
                }
            }
        }
        stage('Push Backend') {
            steps {
                sh 'docker images'
                sh 'docker push jsjproject/projectvt2:latest'
            }
        }
    }
    post {
        always {
            echo '========always========'
        }
        success {
            echo '========pipeline executed successfully ========'
        }
        failure {
            echo '========pipeline execution failed========'
        }
    }
}
